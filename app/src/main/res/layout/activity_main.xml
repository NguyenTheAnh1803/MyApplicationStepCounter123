<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step Counter"
        android:layout_gravity="center"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:textSize="50sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/stepTargetTextView"
        android:textSize="20sp"
        android:text="Step Goal: 5000"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:background="@drawable/cricualer"
        android:progressDrawable="@drawable/custom_progress"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="76dp"
            android:layout_height="96dp"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="Steps:0"
            android:id="@+id/stepCountTextView"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="76dp"
            android:layout_height="96dp"
            android:src="@drawable/baseline_add_location_alt_24"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="Distance:0"
            android:id="@+id/distaceTextView"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="76dp"
        android:layout_height="96dp"
        android:src="@drawable/baseline_access_time_24"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:text="Time:0"
        android:id="@+id/timeTextView"/>
</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Pause"
        android:onClick="onPauseButtonClick"
        android:id="@+id/pauseButton"/>

</LinearLayout>